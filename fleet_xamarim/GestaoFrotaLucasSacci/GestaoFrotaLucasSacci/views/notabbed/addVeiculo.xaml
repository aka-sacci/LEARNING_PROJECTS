<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestaoFrotaLucasSacci.views.notabbed.addVeiculo"
             Title="Veículos">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Adicionar novo veículo" FontSize="25" FontAttributes="Bold" HorizontalOptions="Center" Padding="0, 10, 0, 40"/>
                <Label Text="Placa:"></Label>
                <Entry Text="{Binding Placa}"></Entry>
                <Label Text="Fabricante:"/>
                <Entry Text="{Binding Fabricante}"/>
                <Label Text="Modelo:"/>
                <Entry Text="{Binding Modelo}"/>
                <Label Text="Cor:"/>
                <Entry Text="{Binding Cor}"/>
                <Label Text="Ano:"/>
                <Entry Text="{Binding Ano_Modelo}"/>
                <Label Text="Kilometragem:"/>
                <Entry Text="{Binding KM}"/>

                <Button Text="Salvar" 
                    x:Name="gravar"
                    Clicked="gravar_Clicked"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>